{% extends 'base.html.twig' %}

{% block title %}Project{% endblock %}

{% block body %}
    <h1>Project</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ project.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ project.name }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ project.description }}</td>
            </tr>
            <tr>
                <th>Logo</th>
                <td>{{ project.logo }}</td>
            </tr>
            <tr>
                <th>Thumbnail</th>
                <td>{{ project.thumbnail }}</td>
            </tr>
            <tr>
                <th>Cover_image</th>
                <td>{{ project.coverImage }}</td>
            </tr>
            <tr>
                <th>Brochure</th>
                <td>{{ project.brochure }}</td>
            </tr>
            <tr>
                <th>Created_at</th>
                <td>{{ project.createdAt ? project.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Updated_at</th>
                <td>{{ project.updatedAt ? project.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Is_published</th>
                <td>{{ project.isPublished ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>Published_at</th>
                <td>{{ project.publishedAt ? project.publishedAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_project_index') }}">back to list</a>

    <a href="{{ path('app_project_edit', {'id': project.id}) }}">edit</a>

    {{ include('project/_delete_form.html.twig') }}
{% endblock %}
